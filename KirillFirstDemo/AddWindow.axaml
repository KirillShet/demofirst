<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="KirillFirstDemo.AddWindow"
        Title="AddWindow">
	<Grid ColumnDefinitions="200, 200" RowDefinitions="25, 30, 25, 30, 25, 30, 25, 30">
		<TextBlock Text="Название услуги:" Grid.Column="1"/>
		<TextBox Grid.Column="1" Grid.Row="1"/>
		<TextBlock Text="Стоимость услуги:" Grid.Column="1" Grid.Row="2"/>
		<TextBox Grid.Column="1" Grid.Row="3"/>
		<TextBlock Text="Время:" Grid.Column="1" Grid.Row="4"/>
		<TextBox Grid.Column="1" Grid.Row="5"/>
		<TextBlock Text="Скидка на услуги:" Grid.Column="1" Grid.Row="6"/>
		<TextBox Grid.Column="1" Grid.Row="7"/>
		<TextBlock Grid.RowSpan="4"/>
		<Button Grid.Row="5" Content="Добавить картинку" Grid.RowSpan="2"/>
	</Grid>
</Window>
